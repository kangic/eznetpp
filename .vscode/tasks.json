{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "command": "sh",
    "args": ["-c"],
    "options": {
        "cwd": "${workspaceRoot}"
    },
    "tasks": [
        {
            "label": "cmake",
            "type" : "shell",
            "command" : "cmake",
            "args": [
                "-G",
                "\"Unix Makefiles\"",
                "-DCMAKE_BUILD_TYPE=Debug",
                "${workspaceRoot}"
            ]
        },
        {
            "label": "make",
            "args": [
                "make -j 8"
            ],
            "problemMatcher": [
                "$gcc"
            ]
        }
    ]
}